<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.fandroid.reminder.fragment.CurrentTaskFragment">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ava"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="left"
            android:src="@drawable/ivan" />

        //-----------------------------------------------------------------------------------------------------

        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ava"
            android:text="  Год: 2015" />

        <TextView
            android:id="@+id/country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/year"
            android:layout_toEndOf="@+id/ava"
            android:layout_toRightOf="@+id/ava"
            android:text="  Страна: Россия" />

        <TextView
            android:id="@+id/genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/country"
            android:layout_toEndOf="@+id/ava"
            android:layout_toRightOf="@+id/ava"
            android:text="  Жанр: Приключения, " />

        <TextView
            android:id="@+id/perenoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/genre"
            android:layout_toEndOf="@+id/ava"
            android:layout_toRightOf="@+id/ava"
            android:text="  Мультфильм, Семейный" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/perenoc"
            android:layout_toEndOf="@+id/ava"
            android:layout_toRightOf="@+id/ava"
            android:text="  Длительность: 76 мин/ 01:16" />

        <TextView
            android:id="@+id/ratingtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time"
            android:layout_toEndOf="@+id/ava"
            android:layout_toRightOf="@+id/ava"
            android:text="  Оценка Kinopoisk.ru"
            android:textColor="#0097A7"/>

        <RatingBar
            android:id="@+id/rating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingtext"
            android:layout_toEndOf="@+id/ava"
            android:layout_toRightOf="@+id/ava"
            android:numStars="10"
            android:rating="7" />

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ava"
            android:text="@string/info_ivan"
            android:textSize="18dp"
            android:layout_marginLeft="7dp"/>



    </RelativeLayout>

</FrameLayout>
